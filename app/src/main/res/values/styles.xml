<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar_TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorButtonNormal</item>
    </style>

    <style name="ButtonBarStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ThemeOverlayAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonBarStyle</item>
    </style>
</resources>